{
  "manifest_version": 3,
  "name": "Gemini Bridge",
  "version": "1.0",
  "description": "Bridge Gemini Web to Local Server",
  "permissions": [
    "activeTab",
    "scripting",
    "nativeMessaging"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://gemini.google.com/*",
    "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["socket.io.min.js", "content.js"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [
    {
       "resources": ["icon.png"],
       "matches": ["https://gemini.google.com/*"]
    }
  ]
}
